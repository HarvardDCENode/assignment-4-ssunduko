h2 Add Video and Review

.row
    .col-12.col-md-8.col-md-offset-1
        form(method='POST' action="/videos")
            .form-group
                label(for='name') Title:
                input#name.form-control(type='text', placeholder='title' name='title')
            .form-group
                label(for='description') Description:
                input#description.form-control(type='text', placeholder='description' name='description')
            .form-group
                label(for='rating') Rating:
                select#rating.form-control(name="rating")
                    option 5
                    option 4
                    option 3
                    option 2
                    option 1
            .form-group
                label(for='review') Review:
                textarea#review.form-control(placeholder='review', name='review', rows='10')
            button.btn.btn-primary(type='submit') Add Video